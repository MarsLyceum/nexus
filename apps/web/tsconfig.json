{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@shared-ui/*": ["../../packages/shared-ui/src/*"]
        },
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "stubs/expo-secure-store.js",
        "polyfills/expo-polyfills.cts",
        "polyfills/expo-polyfills.js"
    ],
    "exclude": ["node_modules"]
}
